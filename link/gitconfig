[core]
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX
	editor = /usr/local/bin/nvim
[user]
  name = Rasmus Spiegelberg
[alias]
  co = checkout
  st = status
  d = diff
  dc = diff --cached
  b = !git checkout $(git for-each-ref --count=10 --sort=-committerdate refs/heads --format='%(HEAD)%(color:bold green)%(refname:short)|%(color:blue)%(committerdate:relative)|%(color:magenta)%(authorname)%(color:reset)' --color=always|column -ts'|'} | fzf --ansi | awk '{print $1}')
  wip = !git add -u && git commit -m 'ðŸš§ WIP' --no-verify && git push
[pull]
	rebase = false
[init]
	defaultBranch = master
