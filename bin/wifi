#!/bin/bash

# Simple wrapper around airport util and networksetup for osx

# wifi on
# wifi off
# wifi list
# wifi join <ssid>

if [[ $1 == on ]]; then
  networksetup -setairportpower en1 on
elif [[ $1 == off ]]; then
  echo 
  networksetup -setairportpower en1 off
elif [[ $1 == list ]]; then
  /System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport -s
elif [[ $1 == join ]]; then
  if [[ $2 ]]; then
    ssid=$@
  else

  # if user didn't enter a ssid
  read -p "ssid: "
  ssid=$REPLY
  fi

  # password for connection
  read -s -p "password: "
  pw=$REPLY

  networksetup -setairportnetwork en1 $ssid $pw
else cat <<HELP

Usage:
--------------------------------------------
wifi join <ssid>      Join a network
wifi list             List avalible networks
wifi on               Turn on airport
wifi off              Turn off airport

HELP
exit;
fi
